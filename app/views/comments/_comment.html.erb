                                  <ul class="comments-list">

<% blog.comments.each do |comment| %>

<li>
                                        <div class="comment">
                                            <div class="comment-author">
                                                <%= image_tag comment.user.avatar_url, class: "avatar" %>
                                            </div>
                                            <div class="comment-block">
                                                <span class="comment-by">
                                                    <span class="blog-author-name"><%= comment.user.name %></span>
                                                    <% if current_user == comment.user %>
                                                    <span class="pull-right">
                                                        <span class="blog-reply">
                                                        <%= link_to comment, method: :delete,
        data: {confirm: "Bạn muốn xóa bình luận này?"}, remote: true do %>
                                                        <i class="fa fa-times"></i>
                                                        <% end %>
                                                        </span>
                                                    </span>
                                                    <% end %>
                                                </span>
                                                <p><%= comment.content %></p>
                                                <span class="blog-date"><%= time_ago_in_words comment.created_at %></span>
                                            </div>
                                        </div>
                                    </li>
<% end %>
</ul>
