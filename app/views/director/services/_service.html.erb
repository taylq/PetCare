<tr class="holiday-upcoming">
                                        <td><%= service_counter + 1 %></td>
                                        <td><%= service.name %></td>
                                        <td><%= service.price %></td>
                                        <td class="text-right">
                                            <div class="dropdown dropdown-action">
                                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                                <div class="dropdown-menu dropdown-menu-right">
                                                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#edit-<%= service.id%>"><i class="fa fa-pencil m-r-5"></i> Edit</a></li>
                                                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete-<%= service.id%>"><i class="fa fa-trash-o m-r-5"></i> Delete</a></li>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
<div id="edit-<%= service.id %>" class="modal fade delete-modal" role="dialog">
			<div class="modal-dialog modal-dialog-centered">
				<div class="modal-content">
					<div class="modal-body">
						<%= form_for [:director, service], class: "form" do |f| %>
                            <div class="form-group">
                                <label>Dịch vụ: <span class="text-danger">*</span></label>
                                <%= f.text_field :name, class: "form-control" %>
                            </div>
                            <div class="form-group">
                                <label>Giá tiền: <span class="text-danger">*</span></label>
                                <%= f.number_field :price, class: "form-control" %>
                            </div>
                            <div class="m-t-20 text-center">
                                <%= f.submit "Cập nhật", class: "btn btn-primary submit-btn" %>
                            </div>
                        <% end %>
					</div>
				</div>
			</div>
		</div>
    <div id="delete-<%= service.id %>" class="modal fade delete-modal" role="dialog">
			<div class="modal-dialog modal-dialog-centered">
				<div class="modal-content">
					<div class="modal-body text-center">
						<h3>Bạn có muốn xóa dịch vụ này không?</h3>
						<div class="m-t-20"> <a href="#" class="btn btn-white" data-dismiss="modal">Close</a>
              <%= link_to "Delete", director_service_path(service),method: :delete, class: "btn btn-danger" %>
						</div>
					</div>
				</div>
			</div>
		</div>
