<div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-sm-7 col-4">
                        <h4 class="page-title">Thông tin pet</h4>
                    </div>
                </div>
                <div class="card-box profile-header">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="profile-view">
                                <div class="profile-img-wrap">
                                    <div class="profile-img">
                                        <%= image_tag @pet.image_url, class: "avatar" %>
                                    </div>
                                </div>
                                <%= link_to "Tạo mới bệnh án", new_doctor_user_pet_medical_record_path(@pet.user, @pet.id), class: "btn btn-primary pull-right" %>
								<div class="">
									<center>
										<table class="table" style="width: 500px">
											<tr>
												<h2><%= @pet.name %></h2>
											</tr>
											<tr>
												<td style="text-align: right"><h4>Chủ nhân:<h4></td>
												<td style="text-align: left"><a href="<%= doctor_user_path(@pet.user) %>"><h4 style="color: #66a3ff"><%= @pet.user.name %><h4></a></td>
											</tr>
											<tr>
												<td style="text-align: right"><h4>Loài:<h4></td>
												<td style="text-align: left"><h4><%= @pet.type_pet %><h4></td>
											</tr>
											<tr>
												<td style="text-align: right"><h4>Ngày sinh:<h4></td>
												<td style="text-align: left"><h4><%= @pet.dob %><h4></td>
											</tr>
											<tr>
												<td style="text-align: right"><h4>Giới tính :<h4></td>
												<td style="text-align: left"><h4><%= @pet.gender %><h4></td>
											</tr>
										</table>
									</center>
								</div>
                            </div>
                        </div>
                    </div>
                </div>
				<div class="profile-tabs">

					<div class="tab-content">
						<div class="tab-pane show active" id="pet-tab">
							<div class="row">
								<div class="col-md-12">
									<div class="card-box">
										<h3 class="card-title">Danh Sách Bệnh Án</h3>

										<table class="table">
										  <thead style="background-color: #66a3ff">
											<tr style="color: white">
											  <th scope="col">STT</th>
											  <th scope="col">Ngày khám</th>
											  <th scope="col">Bác sĩ</th>
											  <th scope="col">Chẩn đoán</th>
											  <th scope="col"></th>
											</tr>
										  </thead>
										  <tbody>
                                          <% @pet.medical_records.each_with_index do |mr, i| %>
											<tr>
											  <th scope="row"><%= i + 1 %></th>
											  <td><%= mr.created_at.strftime("%d/%m/%Y") %></td>
											  <td><%= User.find_by_id(mr.doctor_id).name %></td>
											  <td><%= mr.description %></td>
											  <td><%= link_to "Chi tiết", doctor_user_pet_medical_record_path(mr.pet.user, mr.pet, mr) %></td>
											</tr>
                    <% end %>
										  </tbody>
										</table>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
            </div>

        </div>


