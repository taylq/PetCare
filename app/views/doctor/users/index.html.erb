<% provide :title, t("users.index") %>
<div class="page-wrapper">
  <div class="content">
    <div class="row">
      <%= render 'layouts/doctor/flash' %>
        <div class="col-sm-4 col-3">
            <h4 class="page-title">Danh sách người dùng</h4>
        </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="table-responsive">
          <div>
            Xuất báo cáo
            <%= link_to t("export.csv"), doctor_users_path(format: "csv", search: params[:search]) %> |
            <%= link_to t("export.excel"), doctor_users_path(format: "xls", search: params[:search]) %>
          </div>
          <table id="example" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
            <thead>
              <tr>
                <th>#</th>
                <th>Tên</th>
                <th><%= t "sessions.new.email" %></th>
              </tr>
            </thead>
            <tbody>
            <% @users.each_with_index do |user, i| %>
              <tr>
  <td><%= i + 1 %></td>
  <td><%= link_to user.name, doctor_user_path(user) %></td>
  <td><%= user.email %></td>
</tr>
<% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
 <script>
		$(document).ready(function() {
    $('#example').DataTable({
		"language": {
			"oPaginate": {
            "sFirst":    "Trang đầu",
            "sLast":    "Trang cuối",
            "sNext":    "Trang kế",
            "sPrevious": "Trang trước"
        },
		"sSearch": "Tìm kiếm:",
		"sInfo": "Hiển thị _START_ đến _END_ của _TOTAL_ bản ghi",
		"sLengthMenu": "Hiển thị _MENU_ bản ghi"
		}
	});
} );
	</script>
