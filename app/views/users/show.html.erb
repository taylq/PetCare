<div class="main-content">

        <!-- Page Header -->
        <div class="page-header">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="page-title">
                            <span>Thông tin người dùng</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="content">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 doctor-sidebar">
                        <div class="doctor-list doctor-view">
                            <div class="doctor-inner">
                                <%= image_tag @user.avatar_url, class: "img-responsive", size: 750 %>
                                <div class="doctor-details">
                                    <div class="doctor-info">
                                        <h2><%= @user.name %></h2>
										<table class="table">
											<tr>
												<td>
													<h3><%= @user.blogs.count %></h3>
												</td>
												<td>
													<h3>10</h3>
												</td>
												<td>
													<h3>10</h3>
												</td>
											</tr>
											<tr>
												<td>
													<a href="#" class="badge badge-primary" style="background-color: #009efb ">Bài viết</a>
												</td>
												<td>
													<a href="#" class="badge badge-primary" style="background-color: #009efb ">Đang theo dõi</a>
												</td>
												<td>
													<a href="#" class="badge badge-primary" style="background-color: #009efb ">Người theo dõi</a>
												</td>
											</tr>
										</table>
										<tr>
											<td>
												<a href="<%= edit_user_registration_path(current_user) %>" class="btn btn-danger">Chỉnh sửa thông tin  <span class="fa fa-edit"></span></a>
											</td>
											<td>
												<a href="#" class="btn btn-danger">Tin nhắn  <span class="fa fa-envelope"></span></a>
											</td>
										</tr>
										<br><br>
										<table class="table">
											<tr>
												<td style="text-align: right"><h4>Họ và tên :</h4></td>
												<td style="text-align: left"><h4><%= @user.name %></h4></td>
											</tr>
											<tr>
												<td style="text-align: right"><h4>Số điện thoại :</h4></td>
												<td style="text-align: left"><h4><%= @user.phone %></h4></td>
											</tr>
											<tr>
												<td style="text-align: right"><h4>Email :</h4></td>
												<td style="text-align: left"><h4><%= @user.email %></h4></td>
											</tr>
											<tr>
												<td style="text-align: right"><h4>Ngày sinh :</h4></td>
												<td style="text-align: left"><h4><%= @user.dob %></h4></td>
											</tr>
											<tr>
												<td style="text-align: right"><h4>Địa chỉ :</h4></td>
												<td style="text-align: left"><h4><%= @user.address %></h4></td>
											</tr>
										</table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                        <div class="experience-widget col-sm-12">
                            <h3 class="sub-title" style="float: left">Danh sách thú cưng</h3>
                            <%= link_to " Thêm mới pet", new_user_pet_path(current_user), class: "btn btn-primary fa fa-plus pull-right" %></div>
                    <% @user.pets.each do |pet| %>
                      <div class="col-sm-3">
                        <center>
						  <%= link_to image_tag(pet.image_url, size: 170, style: "border-radius: 50%"), user_pet_path(@user, pet)  %>
                        </center>
                        <h5><center><%= pet.name %></center></h5>
                      </div>
                    <% end %>
					<div class="col-sm-12">
                    <hr>
					<h3>Bài viết</h3>
						<% if @user == current_user %>
                        <%= render "shared/blog_form" %>
                        <% end %>
						</br></br></br>
                        <%= render "shared/feed" %>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
